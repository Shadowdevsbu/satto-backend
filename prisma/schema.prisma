generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{
 student
 solver
}
model User {
  id                String   @id @default(uuid())
  email             String   @unique
  full_name         String?
  password          String?
  role              Role @default(student)
  googleId          String?  @unique
  avatar_url        String?
  isEmailConfirmed  Boolean  @default(false)
  createdAt         DateTime @default(now())
  task              Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  course    String
  description String
  deadline    DateTime
  budget    Float
  fileUrl     String
  createdAt DateTime @default(now())

  // Relation field
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

